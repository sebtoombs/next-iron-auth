{
	"name": "next-iron-auth",
	"description": "Auth for Next.js using Next Iron Session, inspired by Next-Auth",
	"author": "Seb Toombs <sebtoombs@gmail.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/sebtoombs/next-iron-auth"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"keywords": [
		"next",
		"nextjs",
		"auth",
		"authentication",
		"nextjs authentication"
	],
	"version": "0.0.4",
	"license": "MIT",
	"peerDependencies": {
		"next": ">=9.0.0"
	},
	"dependencies": {
		"@babel/cli": "^7.12.10",
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"argon2": "^0.27.0",
		"next-iron-session": "^4.1.9",
		"nodemailer": "^6.4.17",
		"swr": "^0.3.6"
	},
	"scripts": {
		"build": "babel src --root-mode upward -d dist --source-maps",
		"watch": "babel --watch src --out-dir dist",
		"prepublishOnly": "cp ../../README.md README.md && npm run build"
	}
}
